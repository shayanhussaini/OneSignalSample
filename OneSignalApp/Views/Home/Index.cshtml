@{
    ViewBag.Title = "Home Page";
}
@model IEnumerable<OneSignalApp.Models.AppModel>

<div class="row">
    
    <div>
        <br />
        <br />
        <br />
        <div>
@if (User.IsInRole("Admin"))
{
            @Html.ActionLink("Create New", "Create")
}
        </div>
        <br />        
        <table border="1" cellpadding="0" class="table table-bordered table-responsive table-hover" cellspacing="0" style="border-color:#efefef" >
            <tr height="40px">
                <th>
                    @Html.DisplayNameFor(model => model.name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.site_name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.players)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.created_at)
                </th>  
                <th>
                    @Html.DisplayNameFor(model => model.organization_id)
                </th>  
                @if (User.IsInRole("Admin"))
                { <th></th> }
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.name)</td>
                    <td>@Html.DisplayFor(modelItem => item.site_name)</td>
                    <td>@Html.DisplayFor(modelItem => item.players)</td>
                    <td>@Html.DisplayFor(modelItem => item.created_at)</td> 
                    <td>@Html.DisplayFor(modelItem => item.organization_id)</td> 
 @if (User.IsInRole("Admin"))
 {                   <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.id })                    
                    </td>                   
 }
                </tr>
            }
           
        </table>
    </div>
</div>